@using Microsoft.AspNet.Identity
@model TH.WebUI.ViewModels.RechargeViewModel

<p>剩余财富值： @ViewBag.WealthValue</p>
@using (Html.BeginForm("Recharge", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.WealthValue, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.WealthValue, new { @class = "form-control", type="Number" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" value="充值" class="btn btn-default" />
        </div>
    </div>
}

