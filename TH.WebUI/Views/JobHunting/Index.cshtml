@model IEnumerable<TH.WebUI.ViewModels.JobHuntingIndexViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<ul>
    @foreach (var jh in Model)
    {
        <li>
            <a href="@Url.Action("Details", new { id = jh.Id })">@jh.Title</a>
            <div>
                <h3>@jh.Title</h3>
                <ul>
                    <li>职位名称:@jh.Name</li>
                    <li>民族:@jh.Nation</li>
                    <li>年龄:@jh.Age</li>
                    <li>工作经历:@jh.WorkExperience</li>
                    <li>工作年限:@jh.WorkYears</li>
                    <li>发布时间:@jh.CreateDate</li>
                </ul>
            </div>
        </li>
    }
</ul>
<p>
    @Html.ActionLink("我要发布", "Create")
</p>
@section scripts
{
    <script type="text/javascript">
        $('#element').tooltip('show');
    </script>
}

