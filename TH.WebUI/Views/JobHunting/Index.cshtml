@using PagedList
@using PagedList.Mvc
@model IPagedList<TH.WebUI.ViewModels.JobHuntingIndexViewModel>

@{
    ViewBag.Title = "求职";
}
@section Styles{
    @Styles.Render("~/Content/PageList")
}
<div class="panel panel-default">
    <div class="panel-heading"><h2>求职信息</h2></div>
    <div class="panel-body">
        <p>
            过滤条件：
        </p>
    </div>
    <ul class="list-group">
        @foreach (var j in Model)
        {
            <li class="list-group-item">
                <a href="@Url.Action("Details", new { id = j.Id })" target="_blank" data-original-title="
                    <h4>@j.Title</h4>
                    <ul class='list-unstyled'>
                        <li>求职岗位:@j.Job</li>
                        <li>民族:@j.Nation</li>
                        <li>年龄:@j.Age</li>
                        <li>工作年限:@j.WorkYears</li>
                        <li>学历:@j.Education</li>
                        <li>发布时间:@j.CreateDate</li>
                    </ul>">
                    @j.Title
                </a>
            </li>
        }
    </ul>
</div>
@Html.PagedListPager(Model, page => Url.Action("Index", new { pageIndex = page }))
<p>
    @Html.ActionLink("我要发布", "Create", null, new { @class = "btn btn-primary" })
</p>
@section scripts
{
    <script type="text/javascript">
        $("a").tooltip({
            placement: "right",
            html: true
        });
    </script>
}
