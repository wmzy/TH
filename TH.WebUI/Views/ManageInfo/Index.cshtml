@model IEnumerable<TH.WebUI.ViewModels.InfoViewModel>
@{
    ViewBag.Title = "我发布的信息";
}
@section Styles
{
    @Styles.Render("~/Content/DataTables")
}
<h2>我发布的信息</h2>
<table id="table_info">
    <thead>
        <tr>
            <th>标题</th>
            <th>分类</th>
            <th>发布日期</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@Html.ActionLink(m.Title, "Details", m.ControllerName, new { id = m.Id })</td>
                <td>@Html.ActionLink(m.Genre, "Index", m.ControllerName, new { id = m.Id })</td>
                <td>@m.CreateDate</td>
                <td>@Html.ActionLink("删除", "Delete", m.ControllerName, new { id = m.Id }, new { @class = "btn btn-default btn-lg" }) 
                @Html.ActionLink("编辑", "Edit", m.ControllerName, new { id = m.Id }, new { @class = "btn btn-default btn-lg" })</td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    @Scripts.Render("~/bundles/DataTables")
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_info').dataTable();
        });
    </script>
}

